# Zoho CRM Configuration
# Required for Zoho CRM integration
VITE_ZOHO_API_BASE=https://www.zohoapis.com/crm/v8
VITE_ZOHO_ACCESS_TOKEN=your_access_token_here
VITE_ZOHO_CLIENT_ID=your_client_id
VITE_ZOHO_CLIENT_SECRET=your_client_secret
VITE_ZOHO_REDIRECT_URI=https://your-app-url.com/zoho/callback
VITE_ZOHO_ORG_ID=your_org_id

# Zoho Sync Settings
VITE_ENABLE_ZOHO_SYNC=true
VITE_ZOHO_SYNC_INTERVAL=30000
VITE_ZOHO_MAX_RETRY_ATTEMPTS=3

# Supabase Configuration
# Get these values from your Supabase project settings
VITE_SUPABASE_URL=https://your-project.supabase.co
VITE_SUPABASE_ANON_KEY=your-anon-key

# AI API Configuration (optional)
# Configure your preferred AI provider
VITE_AI_PROVIDER=openai # or anthropic, cohere, etc.
VITE_AI_API_KEY=your-api-key
VITE_AI_MODEL=gpt-4 # or claude-3, command-r, etc.
VITE_AI_MAX_TOKENS=4000
VITE_AI_TEMPERATURE=0.7

# Application Settings
VITE_APP_NAME=Discovery Assistant
VITE_APP_VERSION=1.0.0
VITE_ENABLE_OFFLINE_MODE=true
VITE_ENABLE_AI_FEATURES=false
VITE_ENABLE_COLLABORATION=false

# Feature Flags
VITE_FEATURE_WIZARD_MODE=true
VITE_FEATURE_CUSTOM_ENTRIES=true
VITE_FEATURE_EXPORT_PDF=true
VITE_FEATURE_EXPORT_EXCEL=true

# Development Settings
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info